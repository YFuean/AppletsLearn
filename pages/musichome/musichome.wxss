@import '../info/info.wxss';
@import '../play/play';
page{
  display: flex;
  flex-direction: column;
  color: #383838;
  height: 100%;
}
.tab{
  display: flex;
  flex-wrap: wrap;
  height: 70rpx;
  width: 100%;
  background: #bcc7bf;
  display: flex;  
  align-items: center;
  justify-content: center;  
  /* 吸顶 */
  position: sticky;
  top: 0;
  z-index: 1;
}
.player{
  height: 150rpx;
  width: 100%;
  background:  #bcc7bf;
  /* 吸底 */
  position: absolute;
  top: 100%;
  z-index: 1;
}
.content{
  width: 100%;
  height: 100%;
}
.tab-item{
  width: 30%;
  text-align: center;
}
